#include <stdio.h>
#include <string.h>
#include <stdlib.h>
void reverseString(char *str) {
    int i = 0, j = strlen(str) - 1;
    while (i < j) {
        char temp = str[i];
        str[i] = str[j];
        str[j] = temp;
        i++;
        j--;
    }
}

int convertOctalToDecimal(int octalNum) {
    int decNum = 0;
    int base = 1;

    while (octalNum != 0) {
        int rem = octalNum % 10;
        decNum += rem * base;
        base *= 8;
        octalNum /= 10;
    }
    return decNum;
}

char* convertDecimalToHexa(int decNum) {
    char *hexa = (char*)calloc(100, 1);

    if (decNum == 0) {
        strcpy(hexa, "0");
        return hexa;
    }

    while (decNum != 0) {
        int rem = decNum % 16;
        char str[2];

        if (rem >= 0 && rem <= 9)
            sprintf(str, "%d", rem);
        else
            str[0] = 'A' + (rem - 10), str[1] = '\0';

        strcat(hexa, str);
        decNum /= 16;
    }

    reverseString(hexa);
    return hexa;
}

int main() {
    int num;
    printf("Enter Octal Number: ");
    scanf("%d", &num);

    char *hex = convertDecimalToHexa(convertOctalToDecimal(num));
    printf("Hexadecimal of octal %d is %s\n", num, hex);

    free(hex);
    return 0;
}
